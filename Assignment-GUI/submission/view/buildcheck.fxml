<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CheckBuildController">
    <padding> 
        <Insets bottom="10.0" left="10.0" right="10.0" />
    </padding>
    
    <Label fx:id="validLbl" alignment="CENTER" text="This build is valid." translateY="-5.0">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <Label fx:id="cpuLbl" alignment="CENTER" text="This build is missing a CPU." translateY="-5.0" visible="true">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <Label fx:id="mboardLbl" alignment="CENTER" text="This build is missing a motherboard." translateY="-5.0" visible="true">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <Label fx:id="ramLbl" alignment="CENTER" text="This build is missing RAM." translateY="-5.0" visible="true">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <Label fx:id="caseLbl" alignment="CENTER" text="This build is missing a case." translateY="-5.0" visible="true">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <Label fx:id="storageLbl" alignment="CENTER" text="This build is missing storage." translateY="-5.0" visible="true">
      <VBox.margin>
         <Insets bottom="1.0" left="30.0" right="10.0" />
      </VBox.margin></Label>
    <HBox alignment="CENTER">
    <Button fx:id="closeBtn" alignment="center" onAction="#handleClose" text="Okay">
         <HBox.margin>
            <Insets top="6.0" />
         </HBox.margin></Button>
    </HBox>
    <stylesheets>
        <URL value="@computerbuilder.css" />
    </stylesheets>
</VBox>
